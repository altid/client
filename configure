#!/bin/sh

# .configure

echo "select a backend:"
echo "1) cairo"
echo "2) ncurses"

read -r backend
case $backend in
	1*|cairo)   sed -i 's/BACKEND = .*$/BACKEND = cairo/'   config.mk ;;
	2*|ncurses) sed -i 's/BACKEND = .*$/BACKEND = ncurses/' config.mk ;;
esac

echo "select an input method:"
echo "1) vi"
echo "2) leanback"

read -r input
case $input in
	1*|vi)       sed -i 's/SEAT = .*$/SEAT = vi/'      config.mk ;;
	2*|leanback) sed -i 's/SEAT = .*$/SEAT = leanback' config.mk ;;
esac

echo "select connection method:"
echo "1) local"
echo "2) 9p"

read -r connection
case $connection in
	1*|local) sed -i 's/TRANSPORT = .*$/TRANSPORT = local/' config.mk ;;
	2*|9p)    sed -i 's/TRANSPORT = .*$/TRANSPORT = 9p/'    config.mk ;;
esac
